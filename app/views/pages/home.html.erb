<div class="middleSection">
   <div class="container  text-center white"> 
    <div class="whiteline"></div>
    <h1>Find Unique Spaces around you by the hour or daily</h1>
    <br />
    <div class="row">
      <div class="registarArea">
        <%= form_tag search_path, method: :get,:class=>"form-inline" do %>
        
          <div class="form-group has-feedback">
              <span class="fa fa-map-marker fa-2x form-control-feedback"></span>
              <%= text_field_tag :search, params[:search], placeholder: "What location do you have in mind?", class: "form-control customInput", id: "autolocation" %>
          </div>
          <div class="form-group has-feedback">
              <span class="fa fa-calendar fa-2x form-control-feedback"></span>
              <%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control customInput datepicker" %>
              
          </div>

          <div class="form-group has-feedback">
              <span class="fa fa-calendar fa-2x form-control-feedback"></span>
              <%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control customInput datepicker" %>
          </div>

          <button type="submit" class="btn btn-default searchBtn">Search</button>
        <% end %>
      </div>
    </div>
   </div> <!-- container -->
</div>


